---
// src/layouts/BaseLayout.astro
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro'; // <--- ADD THIS IMPORT

export interface Props {
    title?: string;
    description?: string;
}

const {
    title = 'Eraneos UK - Digital Transformation & Consulting',
    description = 'Eraneos UK helps businesses navigate the complexities of digital transformation. We offer expert consulting services to drive innovation and growth.'
} = Astro.props;
---
<!doctype html>
<html lang="en-GB">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title}</title>

    <slot name="head-extra" />
</head>
<body>
    <Header />

    <main>
        <slot />
    </main>

    <Footer /> {/* <--- REPLACE PLACEHOLDER WITH THIS COMPONENT */}
</body>
</html>

<style is:global>
  html {
    font-family: system-ui, -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Helvetica, Arial, sans-serif, "Apple Color Emoji", "Segoe UI Emoji", "Segoe UI Symbol";
    line-height: 1.6; /* Improved default line height for readability */
    color: #212529; /* Default text color */
    background-color: #fff; /* Default background */
  }

  body {
    margin: 0;
    font-size: 16px; /* Base font size, can be adjusted */
    /* color and background inherited from html */
  }

  main {
    min-height: calc(100vh - 100px - 100px); /* Placeholder for sticky footer logic, adjust as needed */
  }

  h1, h2, h3, h4, h5, h6 {
    margin-top: 1.5em;
    margin-bottom: 0.75em; /* Adjusted bottom margin */
    color: #212529; /* Consistent heading color */
    font-weight: 600; /* Common weight for headings */
    line-height: 1.3;
  }

  p {
    margin-bottom: 1rem;
  }

  a {
    color: #005bbb; /* A default blue, can be overridden by components */
    text-decoration: none;
  }

  a:hover {
    color: #003da5; /* Darker blue on hover */
    text-decoration: underline;
  }

  /* General container class, if you want one globally available */
  .page-container {
      max-width: 1140px;
      margin-left: auto;
      margin-right: auto;
      padding-left: 15px;
      padding-right: 15px;
  }
</style>