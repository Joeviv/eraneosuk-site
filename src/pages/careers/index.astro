---
// src/pages/careers/index.astro
import BaseLayout from '../../layouts/BaseLayout.astro'; // Note the ../../ path

const pageTitle = "Current Vacancies - Eraneos UK Careers";
const pageDescription = "Explore exciting career opportunities at Eraneos UK. Join our team of experts in digital transformation and consulting in England, UK.";

// In a real application, this data would likely come from a CMS or data files
const vacancies = [
    {
        title: "Senior Manager - Life Science R&D (all genders)",
        location: "England, UK",
        shortDescription: "Lead and shape transformative projects in the Life Science R&D sector, leveraging your expertise to drive innovation and client success.",
        slug: "senior-manager-life-science-rd" // This will form part of the URL
    },
    {
        title: "Senior Data Analyst (all genders)",
        location: "England, UK",
        shortDescription: "Analyse complex datasets, generate actionable insights, and contribute to data-driven decision-making for our clients and internal projects.",
        slug: "senior-data-analyst"
    }
];
---
<BaseLayout title={pageTitle} description={pageDescription}>
    <div class="container careers-page">
        <header class="page-header">
            <h1>Join Our Team at Eraneos UK</h1>
            <p class="subtitle">
                We are always looking for talented individuals to contribute to our mission
                of shaping a digital tomorrow our clients can trust. Explore our current
                vacancies in the UK below.
            </p>
        </header>

        <section class="vacancies-list">
            {vacancies.length > 0 ? (
                vacancies.map(vacancy => (
                    <article class="vacancy-card">
                        <div class="vacancy-card-content">
                            <h2><a href={`/careers/${vacancy.slug}`}>{vacancy.title}</a></h2>
                            <p class="vacancy-location">{vacancy.location}</p>
                            <p class="vacancy-description">{vacancy.shortDescription}</p>
                        </div>
                        <a href={`/careers/${vacancy.slug}`} class="view-details-button">
                            View Details â†’
                        </a>
                    </article>
                ))
            ) : (
                <p>There are currently no open vacancies. Please check back soon.</p>
            )}
        </section>
    </div>
</BaseLayout>

<style>
    .container.careers-page {
        max-width: 960px;
        margin: 2rem auto 4rem auto;
        padding: 1rem;
        font-family: system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
    }

    .page-header {
        text-align: center;
        margin-bottom: 3rem;
        padding-bottom: 1.5rem;
        border-bottom: 1px solid #e0e0e0;
    }

    .page-header h1 {
        font-size: 2.5rem;
        color: #1a1a1a; /* Dark grey/black for heading */
        margin-bottom: 0.5rem;
        font-weight: 600;
    }

    .page-header .subtitle {
        font-size: 1.1rem;
        color: #555;
        max-width: 700px;
        margin: 0 auto;
        line-height: 1.6;
    }

    .vacancies-list {
        display: grid;
        gap: 2rem;
    }

    .vacancy-card {
        background-color: #ffffff;
        border: 1px solid #e0e0e0;
        border-radius: 8px;
        padding: 1.5rem 2rem;
        box-shadow: 0 2px 8px rgba(0,0,0,0.05);
        display: flex;
        flex-direction: column;
        justify-content: space-between;
        transition: box-shadow 0.3s ease;
    }

    .vacancy-card:hover {
        box-shadow: 0 5px 15px rgba(0,0,0,0.1);
    }

    .vacancy-card h2 {
        font-size: 1.5rem;
        margin-bottom: 0.5rem;
        font-weight: 600;
    }
    .vacancy-card h2 a {
        color: #1a1a1a; /* Dark grey/black for link */
        text-decoration: none;
    }
    .vacancy-card h2 a:hover {
        color: #ff5f00; /* Eraneos Orange on hover */
        text-decoration: underline;
    }

    .vacancy-location {
        font-size: 0.95rem;
        color: #777;
        margin-bottom: 1rem;
        font-weight: 500;
    }

    .vacancy-description {
        font-size: 1rem;
        color: #444;
        line-height: 1.6;
        margin-bottom: 1.5rem;
    }

    .view-details-button {
        display: inline-block;
        align-self: flex-start;
        background-color: #ff5f00; /* Eraneos Orange */
        color: white !important;
        padding: 0.7rem 1.4rem; /* Slightly adjusted padding */
        border-radius: 25px; /* Pill shape for consistency */
        text-decoration: none;
        font-weight: 500;
        transition: background-color 0.3s ease, transform 0.2s ease;
    }

    .view-details-button:hover {
        background-color: #e05300; /* Darker Orange */
        text-decoration: none;
        transform: translateY(-2px);
    }
</style>