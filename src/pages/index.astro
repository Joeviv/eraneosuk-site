---
// src/pages/index.astro
import BaseLayout from '../layouts/BaseLayout.astro';

const pageTitle = "Eraneos UK | Enabling You To Win";
const pageDescription = "As a European challenger, Eraneos UK empowers organizations to thrive through sustainable transformation. Future-proof solutions from your trusted digital partner.";
---
<BaseLayout title={pageTitle} description={pageDescription}>

    <section class="hero-section-eraneos">
        <div class="hero-content-eraneos">
            <h1>Enabling you to win</h1>
            <p>
                As a European challenger, we empower organizations to thrive
                through sustainable transformation.
            </p>
            <a href="https://www.eraneos.com/en/about-us/" target="_blank" rel="noopener noreferrer" class="cta-button-eraneos">
                Find out more
            </a>
        </div>
    </section>

    <section class="future-proof-section">
        <div class="container-eraneos">
            <div class="future-proof-content">
                <h2>Future proof solutions</h2>
                <p>
                    As an international strategy, transformation, and technology consulting
                    group, we help you turn change into impact. From crafting tailored strategies
                    to turning businesses into digital leaders, designing future-ready
                    organizations, unlocking the full potential of data and AI, and delivering
                    comprehensive cybersecurity and risk management solutions â€“ we enable
                    you to win.
                </p>
                <p>
                    Our experts combine deep industry knowledge with technological expertise
                    to guide your business through complex changes and achieve measurable success.
                    We partner with you to build resilient, innovative, and sustainable
                    digital futures.
                </p>
            </div>
            <div class="future-proof-image">
                <img src="https://via.placeholder.com/500x600.png/e0e0e0/969696?text=Placeholder+Image" alt="Team discussing solutions" />
            </div>
        </div>
    </section>

</BaseLayout>

<style>
    .container-eraneos {
        max-width: 1140px;
        margin: 0 auto;
        padding: 0 1rem;
    }

    .hero-section-eraneos {
        background-color: #101010; /* Dark fallback, slightly different from header if needed */
        background-image: url('/images/backgrounds/hero_background.jpg'); /* PATH FROM YOUR SCREENSHOT */
        background-size: cover;
        background-position: center center;
        background-repeat: no-repeat;
        color: #ffffff;
        /* Header: 20px padding top/bottom + 32px logo = 72px. Let's add a bit more. */
        padding-top: calc(72px + 50px); /* Header height + extra space above text */
        padding-bottom: 8rem;          /* Space below text block */
        padding-left: 1rem;             /* Side padding for content within hero */
        padding-right: 1rem;
        text-align: left;
        position: relative;
        overflow: hidden;
        min-height: 70vh; /* Or adjust for desired visual height */
        display: flex;
        align-items: center; /* Vertically center the .hero-content-eraneos block */
    }

    .hero-content-eraneos {
        max-width: 620px;
        position: relative;
        z-index: 1;
        /* Align with .container padding in Header.astro (1320px wide, 20px padding) */
        margin-left: calc((100% - 1320px)/2 + 20px);
    }
    @media (max-width: 1360px) { /* When header container is full width */
        .hero-content-eraneos {
            margin-left: 20px;
            margin-right: 20px;
        }
    }
     @media (max-width: 768px) {
        .hero-section-eraneos {
            text-align: center;
            /* Header on mobile: 15px padding top/bottom + 28px logo = ~58px */
            padding-top: calc(58px + 40px); /* Header height + extra space */
            padding-bottom: 6rem;
            min-height: 65vh;
        }
        .hero-content-eraneos {
            margin-left: auto;
            margin-right: auto;
        }
    }

    .hero-content-eraneos h1 {
        font-size: 3.8rem; font-weight: 600; line-height: 1.1;
        margin-bottom: 1.5rem; color: #ffffff;
    }
    .hero-content-eraneos p {
        font-size: 1.2rem; margin-bottom: 2.5rem; max-width: 520px;
        line-height: 1.7; color: #e0e0e0;
    }
    .cta-button-eraneos {
        background-color: #ff5f00; color: #ffffff !important; padding: 0.9rem 2.2rem;
        text-decoration: none; border-radius: 25px; font-weight: 500; font-size: 1rem;
        transition: background-color 0.3s ease, transform 0.2s ease; display: inline-block;
    }
    .cta-button-eraneos:hover { background-color: #e05300; transform: translateY(-2px); text-decoration: none; }

    .future-proof-section { padding: 5rem 0; background-color: #ffffff; }
    .future-proof-section .container-eraneos { display: flex; align-items: center; gap: 3.5rem; }
    .future-proof-content { flex: 1; order: 1; }
    .future-proof-content h2 {
        font-size: 2.5rem; color: #212529; margin-bottom: 1.5rem;
        font-weight: 700; line-height: 1.2;
    }
    .future-proof-content p {
        font-size: 1rem; line-height: 1.8; color: #555555; margin-bottom: 1.5rem;
    }
    .future-proof-image { flex-basis: 45%; max-width: 45%; text-align: right; order: 2; }
    .future-proof-image img { max-width: 100%; height: auto; border-radius: 8px; }

    @media (max-width: 992px) {
        .hero-content-eraneos h1 { font-size: 2.8rem; }
        .future-proof-section .container-eraneos { flex-direction: column; }
        .future-proof-content, .future-proof-image {
            max-width: 100%; flex-basis: auto; order: 0; text-align: center;
        }
        .future-proof-image { margin-top: 2.5rem; }
        .future-proof-content h2 { font-size: 2rem; }
    }
    @media (max-width: 768px) {
        .hero-content-eraneos h1 { font-size: 2.2rem; }
    }
</style>